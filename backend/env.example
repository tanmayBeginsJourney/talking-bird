# Rename this file to .env and fill in your values

# Application
APP_NAME=Talking Bird
DEBUG=false

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/talkingbird

# Vector Database (Qdrant)
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=6333
COLLECTION_NAME=office_of_research_docs

# LLM Configuration (Groq)
GROQ_API_KEY=your-groq-api-key-here
LLM_MODEL=llama-3.3-70b-versatile
LLM_TEMPERATURE=0.0

# Embeddings (mpnet has 768 dims vs 384 for MiniLM - better quality)
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2

# Retrieval Settings
TOP_K_CHUNKS=10
SIMILARITY_THRESHOLD=0.55
CHUNK_SIZE=400
CHUNK_OVERLAP=100

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=50



